rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to validate user data
    function isValidUserData() {
      let data = request.resource.data;
      return data.keys().hasAll(['uid', 'email', 'createdAt', 'lastLoginAt']) &&
             data.uid is string &&
             data.email is string &&
             data.createdAt is timestamp &&
             data.lastLoginAt is timestamp;
    }
    
    // Users collection - each user can only read/write their own document
    match /users/{userId} {
      // Allow read if authenticated and requesting own document
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Allow create if authenticated, creating own document, and data is valid
      allow create: if isAuthenticated() && 
                       isOwner(userId) && 
                       isValidUserData() &&
                       request.resource.data.uid == request.auth.uid;
      
      // Allow update if authenticated, updating own document
      // Prevent uid and email changes
      allow update: if isAuthenticated() && 
                       isOwner(userId) &&
                       request.resource.data.uid == resource.data.uid &&
                       request.resource.data.email == resource.data.email;
      
      // Allow delete if authenticated and deleting own document
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Scam reports collection (for future use)
    match /scam_reports/{reportId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and userId matches auth
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete only if owner
      allow update, delete: if isAuthenticated() && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Families collection
    match /families/{familyId} {
      // Helper to check if user is family admin
      function isFamilyAdmin() {
        return isAuthenticated() && 
               resource.data.adminId == request.auth.uid;
      }
      
      // Helper to check if user is family member
      function isFamilyMember() {
        return isAuthenticated() && 
               request.auth.uid in resource.data.memberIds;
      }
      
      // Allow read if:
      // 1. User is a member of the family, OR
      // 2. User is authenticated (needed for invite code validation and joining)
      allow read: if isAuthenticated();
      
      // Allow create if authenticated (creating new family)
      allow create: if isAuthenticated() && 
                       request.resource.data.adminId == request.auth.uid &&
                       request.auth.uid in request.resource.data.memberIds;
      
      // Allow update if user is family admin or member (for joining)
      allow update: if isFamilyAdmin() || 
                       (isAuthenticated() && 
                        request.auth.uid in request.resource.data.memberIds);
      
      // Allow delete only if user is family admin
      allow delete: if isFamilyAdmin();
      
      // Family members subcollection
      match /members/{memberId} {
        // Allow read if user is a member of the parent family
        allow read: if isAuthenticated() && 
                       request.auth.uid in get(/databases/$(database)/documents/families/$(familyId)).data.memberIds;
        
        // Allow create if user is adding themselves or is family admin
        allow create: if isAuthenticated() && 
                         (memberId == request.auth.uid || 
                          get(/databases/$(database)/documents/families/$(familyId)).data.adminId == request.auth.uid);
        
        // Allow update if user is updating themselves or is family admin
        allow update: if isAuthenticated() && 
                         (memberId == request.auth.uid || 
                          get(/databases/$(database)/documents/families/$(familyId)).data.adminId == request.auth.uid);
        
        // Allow delete if user is family admin (for removing members)
        allow delete: if isAuthenticated() && 
                         (memberId == request.auth.uid ||
                          get(/databases/$(database)/documents/families/$(familyId)).data.adminId == request.auth.uid);
      }
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
